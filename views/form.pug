extends layout

block content
 pre=JSON.stringify(errors, null, 4)
 div(style="width:50%;margin:0 auto;")
  h2 Add New Recipe
  form(action="/recipe/add" method="POST" enctype="multipart/form-data")
    .form-group
        label(for='name') Name
        input.form-control(name="name" type='text', placeholder='eg:Poha')
        if errors && errors.name
         small#emailHelp.form-text.text-muted We'll never share your email with anyone else.
    .form-group
        label(for='description') Description
        input.form-control(name="description" type='text', placeholder='eg: Description')
        if errors && errors.description
         small#emailHelp.form-text.text-muted We'll never share your email with anyone else.
    .form-group
        label(for='photo') Photo
        input(type="file" name="photo" id="photo" accept="image/gif, image/png, image/jpeg")
    .form-group
    div Add Directions
        div.directions
            .input-group
                input.form-control(type='text', placeholder="Recipient's username" name="directions")
                button.btn.btn-outline-secondary.remove-btn(type='button') Remove
        button(type="button" class="btn btn-small" id="add") Add Photo
    input(type="submit" value="Save â†’" class="btn btn-primary")